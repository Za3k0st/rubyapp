%h2
	Users Manager
%div.col-md-12
	=render 'shared/flashs'
	.table-responsive.datatable
		%table.table.table-hover
			%thead
				%tr
					%th ID
					%th Firstname
					%th Name
					%th Email
					%th.text-center
					%th.text-center
			%tbody
				-@users.each do |u|
					%tr
						%th{'scope' => "row"}=u.id
						%td=u.firstname
						%td=u.lastname
						%td=u.email
						%td.text-center
							=link_to edit_user_path(u) do
								%button.btn.btn-primary
									Update
						%td.text-center
							=link_to user_path(u),method: :delete, data: { confirm: 'Are you sure ?' } do
								%button.btn.btn-danger
									Delete
		=link_to new_user_path do
			%button.btn.btn-success
				Create a new user
